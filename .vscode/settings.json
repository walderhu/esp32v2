// settings.json
{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".*\\.py$",
                "isAsync": true,
                "cmd": "/home/des/miniforge3/bin/ampy --port /dev/ttyUSB0 --baud 115200 put ${file}"
            }
        ]
    },
    "MicroPython.executeButton": [
        {
            "text": "â–¶",
            "tooltip": "Run",
            "alignment": "left",
            "command": "extension.executeFile",
            "priority": 3.5
        }
    ],
    "MicroPython.syncButton": [
        {
            "text": "$(sync)",
            "tooltip": "sync",
            "alignment": "left",
            "command": "extension.execute",
            "priority": 4
        }
    ],
    "python.analysis.extraPaths": [
        "./stubs"
    ],
    "python.analysis.stubPath": "./stubs",
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingModuleSource": "none"
    },
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.git": true,
        "**/.vscode": true,
        "**/.DS_Store": true,
        "**/stubs/.gitignore": true,
        "**/stubs": true,
        "**/.*": true
    }
}